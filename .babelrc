{
  "presets": [
    [
      "@babel/preset-env",
      {
        "targets": {
          "chrome": 66
        },
        "useBuiltIns": "usage",
        "modules": false,
        "shippedProposals": true,
        "debug": false
      }
    ],
    "@babel/preset-react"
  ],
  "plugins": [
    ["@babel/plugin-proposal-decorators", { "legacy": true }],
    ["@babel/plugin-proposal-class-properties", { "loose": true }],
    "styled-components"
  ],
  "env": {
    "development": {
      "plugins": [
        "react-hot-loader/babel"
      ]
    }
  }
}
